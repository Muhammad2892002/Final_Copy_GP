@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "JobTitles";
}
<div class="register-container">
    <div class="register-header">Create New Job Title</div>
    <div class="row">
        <div class="col-12">
            <form class="register-form" asp-action="CreateJobTitle" method="post">
                <select class="form-select" name="category" required>
                    <option  value="" selected>Open this category list</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Name">@item.Name</option>
                    }


                </select>
                <div class="form-group">
                    <label for="firstname">Name</label>
                    <input type="text" id="name" name="name"
                           required>
                </div>
                <div class="form-group">
                    <label for="lastname">Description</label>
                    <input type="text" id="desc" name="desc" required>
                </div>
                <div class="form-group">
                    <label for="email">Image</label>
                    <input type="file" id="image" name="image" accept="images/*">
                </div>

                <button type="submit" class="register-button">Save Changes</button>
            </form>
        </div>
    </div>
</div>