@using TechQuestions.DTOs

@model List<SystemUserDTO>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Users";
}
<head>
    <style>
        .new_margin {
            margin: 100px;
        }
    </style>
</head>

<div class="page-content page-container new_margin" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <h4>Customer Information</h4>

            <div class="col-lg-12 grid-margin stretch-card">
                <br />
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Image</th>
                                        <th>Name</th>

                                        <th>Email</th>
                                        <th>JoinDate</th>
                                        <th>Phone</th>
                                        <th>Nationality</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count != 0 && Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th>@item.Id</th>
                                                <th>
                                                    <img src="@item.Image" width="50" height="50" />
                                                </th>
                                                <th>@item.Name</th>

                                                <th>@item.Email</th>
                                                <th>@item.JoinDate</th>
                                                <th>@item.Phone</th>
                                                <th>@item.Nationality</th>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8">No Founded Data For User</td>
                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>