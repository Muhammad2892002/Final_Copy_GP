@using TechQuestions.DTOs;
@using TechQuestions.Entites
@model List<JobTitle>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "JobTitles";
}
<head>
    <style>
        .new_margin {
            margin: 100px;
        }
    </style>
</head>


<div class="page-content new_margin page-container" id="page-content">
    <div class="padding">
        
        <div class="row container d-flex justify-content-center">
            <h4 class="col-8">Job Titles List</h4>
            <a type="button" asp-action="CreateJobTitle" class="col-4 btn btn-info" style="float:right">Create Job Title</a>

        </div>

        <div class="row container d-flex justify-content-center">
            <div class="col-lg-12 grid-margin stretch-card">
                <br />
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count != 0 && Model != null )
                                    {
                                        @foreach (var jobTitle in Model )
                                        {
                                            @if(jobTitle.IsDeleted==false){
                                            <tr>
                                                <td>@jobTitle.Id</td>
                                                <td>@jobTitle.Title</td>
                                                <td>@jobTitle.Description</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(jobTitle.Image))
                                                    {
                                                        <img src="@jobTitle.Image" alt="Job Title Image" width="50" height="50" />
                                                    }
                                                    else
                                                    {
                                                        <span>No Image</span>
                                                    }
                                                </td>
                                                <td>@jobTitle.Category</td>
                                                <td colspan="2">
                                                    <a asp-action="UpdateJobTitle" asp-route-Id="@jobTitle.Id" class="btn btn-outline-warning">Edit</a>
                                                    <a asp-action="DeleteJobTitle" asp-route-Id="@jobTitle.Id" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this job title?');">Delete</a>
                                                </td>
                                            </tr>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6">No job titles found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
