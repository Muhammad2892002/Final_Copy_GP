@using TechQuestions.DTOs

@model Tuple<List<JobTitleDto>, List<CategoryDTO>>
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Job Titles";
}

<!-- Jobs Start -->
<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Job Listing</h1>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <!-- All Jobs Tab -->
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill" href="#tab-all">
                        <h6 class="mt-n1 mb-0">All Job Titles</h6>
                    </a>
                </li>
                <!-- Category Tabs -->
                @for (int i = 0; i < Model.Item2.Count; i++)
                {
                    var category = Model.Item2[i];
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-@category.Id">
                            <h6 class="mt-n1 mb-0">@category.Name</h6>
                        </a>
                    </li>
                }
            </ul>
            <div class="tab-content">
                <!-- All Jobs Content -->
                <div id="tab-all" class="tab-pane fade show active p-0">
                    @foreach (var job in Model.Item1)
                    {
                        <div class="job-item p-4 mb-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                    <img class="flex-shrink-0 img-fluid border rounded" src="~/assets/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                    <div class="text-start ps-4">
                                        <h5 class="mb-3">@job.Title</h5>
                                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@job.Description</span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                    <div class="d-flex mb-3">

                                        <a class="btn btn-primary" asp-action="GetExamByJobTitle" asp-route-Id="@job.Id">Get Exam Now</a>
                                    </div>
                                    <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Since: @job.Time</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Category-specific Content -->
                @for (int i = 0; i < Model.Item2.Count; i++)
                {
                    var category = Model.Item2[i];
                    var jobsInCategory = Model.Item1.Where(job => job.CategoryId == category.Id).ToList();
                    <div id="tab-@category.Id" class="tab-pane fade p-0">
                        @if (jobsInCategory.Any())
                        {
                            @foreach (var job in jobsInCategory)
                            {
                                <div class="job-item p-4 mb-4">
                                    <div class="row g-4">
                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid border rounded" src="~/assets/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                            <div class="text-start ps-4">
                                                <h5 class="mb-3">@job.Title</h5>
                                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@job.Description</span>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-3">

                                               <a class="btn btn-primary" asp-action="GetExamByJobTitle" asp-route-Id="@job.Id">Get Exam Now</a>
                                            </div>
                                            <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Since: @job.Time</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No jobs available in this category.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Jobs End -->
