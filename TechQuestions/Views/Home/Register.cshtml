@{
    Layout = null;
    ViewData["Title"] = "Sign Up";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <style>
        body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #eef2f3;
        }

        .register-container {
        width: 100%;
        max-width: 650px;
        padding: 40px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        }

        .register-container:hover {
        transform: translateY(-5px);
        }

        .register-header {
        text-align: center;
        color: #333;
        font-size: 2em;
        font-weight: bold;
        margin-bottom: 20px;
        }

        .register-form {
        display: flex;
        flex-direction: column;
        }

        .form-group {
        margin-bottom: 15px;
        }

        .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
        }

        .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1em;
        transition: border-color 0.3s ease;
        }

        .form-group input:focus {
        outline: none;
        border-color: #00B074;
        box-shadow: 0 0 5px rgba(0, 120, 215, 0.5);
        }

        .register-button {
        padding: 12px;
        background-color: #00B074;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1.2em;
        cursor: pointer;
        text-transform: uppercase;
        font-weight: bold;
        transition: background-color 0.3s ease;
        }

        .register-button:hover {
        background-color: #005bb5;
        }

        .footer-text {
        text-align: center;
        margin-top: 15px;
        color: #666;
        font-size: 0.9em;
        }

        .footer-text a {
        color: #00B074;
        text-decoration: none;
        font-weight: bold;
        }

        .footer-text a:hover {
        text-decoration: underline;
        }

        @@media (max-width: 480px) {
        .register-container {
        padding: 15px;
        }

        .register-header {
        font-size: 1.5em;
        }

        .register-button {
        font-size: 1em;
        padding: 10px;
        }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">Sign Up</div>
        <form class="register-form" asp-action="Register" method="post">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" placeholder="John" aria-label="First Name"
                pattern="[A-Za-z]{2,30}" title="First name should only contain letters (2-30 characters)" required>
            </div>
            <div class="form-group">
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" placeholder="Doe" aria-label="Last Name"
                pattern="[A-Za-z]{2,30}" title="Last name should only contain letters (2-30 characters)" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                @if (@ViewBag.EmailDoesExist) { 
                    <p class="text-danger">This Email Already Exist</p>
                }
                <input type="email" id="email" name="email" placeholder="example@mail.com" aria-label="Email Address"
                       pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" title="Enter a valid email address" required>
            </div>
           <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="At least 8 characters" aria-label="Password"
           pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$_@@#!%*?&])[A-Za-z\d$_@@#!%*?&]{8,}$"
           title="Password must be at least 8 characters long and include uppercase, lowercase, number, and special character"
           required>
</div>

            <div class="form-group">
                <label for="nationality">Nationality</label>
                <input type="text" id="nationality" name="nationality" placeholder="American" aria-label="Nationality"
                       pattern="[A-Za-z ]{2,50}" title="Nationality should only contain letters and spaces (2-50 characters)" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" placeholder="123456789" aria-label="Phone Number"
                       pattern="\d{7,15}" title="Phone number should be 7 to 15 digits" required>
            </div>
            <div class="form-group">
                <label for="countrycode">Country Code</label>
                <input type="text" id="countrycode" name="countrycode" placeholder="+1" aria-label="Country Code"
                       pattern="\+[0-9]{1,4}" title="Country code should start with + followed by 1 to 4 digits" required>
            </div>
            <button type="submit" class="register-button">Register</button>
        </form>
        <div class="footer-text">
            Already have an account? <a asp-action="Login">Login</a>
        </div>
    </div>
</body>
</html>
